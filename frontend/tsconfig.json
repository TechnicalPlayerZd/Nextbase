{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "ignoreDeprecations": "6.0",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/utils/*": ["undyne/utils/*"],
      "@/lib/*": ["undyne/lib/*"],
      "@/components/*": ["undyne/components/*"],
      "@/styles/*": ["undyne/styles/*"],
      "@/store/*": ["src/store/*"],
      "@/": ["src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src",
    "undyne/components"
, "ui", "undyne/components"  ],
  "exclude": ["node_modules"]
}
